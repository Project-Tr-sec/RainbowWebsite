<style>
  .navbar-custom{background:#fff;box-shadow:0 2px 15px rgba(0,0,0,.1);padding:1rem 0}
  .navbar-brand img{height:60px;transition:.3s} .navbar-brand img:hover{transform:scale(1.05)}
  .navbar-custom .nav-link{font-size:1.1rem;font-weight:600;color:#4a5568;margin:0 .5rem;padding:.5rem 1rem;position:relative;transition:.3s}
  .navbar-custom .nav-link:hover{color:#2d3748}
  .navbar-custom .nav-link:before{content:'';position:absolute;width:0;height:2px;bottom:0;left:0;background:#4299e1;visibility:hidden;transition:.3s}
  .navbar-custom .nav-link:hover:before,.navbar-custom .active:before{visibility:visible;width:100%}
  .navbar-custom .active{color:#4299e1!important}
  .contact-btn{background:#4299e1;color:#fff!important;border-radius:50px;padding:.5rem 1.5rem!important;margin-left:.5rem;transition:.3s}
  .contact-btn:hover{background:#3182ce;transform:translateY(-2px);box-shadow:0 4px 8px rgba(66,153,225,.3)}
  @media (max-width:992px){.navbar-brand img{height:50px}}
</style>

<nav class="navbar navbar-expand-lg navbar-light navbar-custom">
  <div class="container">
    <a class="navbar-brand" href="/"><img src="/img/Logo.png" alt="Rainbow Language Academy"></a>
